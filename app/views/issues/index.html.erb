<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<table>
  <thead>
    <tr>
      <th>Summary</th>
      <th>Component</th>
      <th>Created user</th>
      <th>Component</th>
      <th>Updated on</th>
      <th>Due date</th>
      <th>Assigner</th>
      <th>Priority</th>
      <th>Url</th>
      <th>Issue type</th>
      <th>Created on</th>
      <th>Estimated hours</th>
      <th>Milestone</th>
      <th>Start date</th>
      <th>Status</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.summary %></td>
        <td><%= issue.component_id %></td>
        <td><%= issue.created_user_id %></td>
        <td><%= issue.component_id %></td>
        <td><%= issue.updated_on %></td>
        <td><%= issue.due_date %></td>
        <td><%= issue.assigner_id %></td>
        <td><%= issue.priority_id %></td>
        <td><%= issue.url %></td>
        <td><%= issue.issue_type_id %></td>
        <td><%= issue.created_on %></td>
        <td><%= issue.estimated_hours %></td>
        <td><%= issue.milestone_id %></td>
        <td><%= issue.start_date %></td>
        <td><%= issue.status_id %></td>
        <td><%= issue.project_id %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
