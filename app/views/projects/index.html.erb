<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Archived</th>
      <th>Name</th>
      <th>Key</th>
      <th>Url</th>
      <th>Text formatting rule</th>
      <th>Use parent child issue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.archived %></td>
        <td><%= project.name %></td>
        <td><%= project.key %></td>
        <td><%= project.url %></td>
        <td><%= project.text_formatting_rule %></td>
        <td><%= project.use_parent_child_issue %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

